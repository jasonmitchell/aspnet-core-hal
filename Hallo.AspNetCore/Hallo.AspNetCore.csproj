<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <LangVersion>latest</LangVersion>
        <Version>1.0.0</Version>
        <PackageVersion>1.0.0</PackageVersion>
        <PackageId>Hallo.AspNetCore</PackageId>
        <AssemblyName>Hallo.AspNetCore</AssemblyName>
        <Authors>Jason Mitchell</Authors>
        <Description>Hallo is a content negotiated implementation of the HAL hypermedia format for ASP.NET Core.</Description>
        <PackageProjectUrl>https://github.com/jasonmitchell/hallo</PackageProjectUrl>
        <RepositoryUrl>https://github.com/jasonmitchell/hallo</RepositoryUrl>
        <PackageTags>HAL;HAL+JSON;Hypermedia</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <PropertyGroup>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Hallo\Hallo.csproj" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="MinVer" Version="2.4.0">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

</Project>
